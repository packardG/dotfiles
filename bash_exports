# AWS credentials set these only locally
if [[ $(hostname -f) = *verticacorp.com* ]]; then
    export AWS_ACCESS_KEY_ID=$(cat ~/.aws/credentials 2>/dev/null | grep -m1 aws_access_key_id | awk '{ print $NF}' | sed -e 's/[a-zA-Z_]*\s*=\s*//g' )
    export AWS_SECRET_ACCESS_KEY=$(cat ~/.aws/credentials 2>/dev/null | grep -m1 aws_secret_access_key | awk '{ print $NF}' | sed -e 's/[a-zA-Z_]*\s*=\s*//g' )
fi
